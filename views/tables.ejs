<body>
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Tables</h1>
  <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
    For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">
      official DataTables documentation</a>.</p>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Password</th>
              <th>Delete/Update</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Password</th>
              <th>Delete/Update</th>
            </tr>
          </tfoot>
          <tbody>
            <% pData.data.forEach(e=> { %>
              <tr>
                <td>
                  <%= e.firstName %>
                </td>
                <td>
                  <%= e.lastName %>
                </td>
                <td>
                  <%= e.email %>
                </td>
                <td>
                  <%= e.password %>
                </td>
                <td>
                  <a href="/delete?id=<%= e._id %>"><Button class="btn btn-danger">Delete</Button></a>
                  <a href="/profile?id=<%= e._id %>"><Button class="btn btn-success">Edit</Button></a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
        <td>
          <div class="row">
            <div class="col-sm-12 col-md-7">
              <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
                <ul class="pagination">
                  <li class="paginate_button page-item previous <%= pData.prevPage?"":" disabled" %>"
                    id="dataTable_previous">
                    <a href="/table?page=<%= pData.prevPage %>" aria-controls="dataTable" data-dt-idx="0" tabindex="0"
                      class="page-link">Previous</a>
                  </li>
                  <% for( let i=1; i <=pData.totalPages; i++ ) { %>
                    <li class="paginate_button page-item <%= pData.currentPage==i?" active":"" %>">
                      <a href="/table?page=<%= i %>" aria-controls="dataTable" data-dt-idx="1" tabindex="0"
                        class="page-link"><%= i %></a>
                    </li>
                    <% } %>
                      <li class="paginate_button page-item next <%= pData.nextPage?"":" disabled" %>"
                        id="dataTable_next">
                        <a href="/table?page=<%= pData.nextPage %>" aria-controls="dataTable" data-dt-idx="7"
                          tabindex="0" class="page-link">Next</a>
                      </li>
                </ul>
              </div>
            </div>
          </div>

        </td>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</body>